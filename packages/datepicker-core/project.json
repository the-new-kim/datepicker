{
  "name": "datepicker-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/datepicker-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/datepicker-core",
        "main": "packages/datepicker-core/src/index.ts",
        "tsConfig": "packages/datepicker-core/tsconfig.lib.json",
        "assets": ["packages/datepicker-core/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs packages/datepicker-core {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/datepicker-core/jest.config.ts"
      }
    }
  },
  "tags": []
}
